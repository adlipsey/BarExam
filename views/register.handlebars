
{{#if errors}}
{{#each errors}}
<div class="notice error"><i class "icon-remove-sign icon-large"></i> {{msg}}
  <a href="#close" class="icon-remove"></a></div>
  <!-- <div class ="alert alert-danger">{{msg}}</div> -->
  {{/each}}
  {{/if}}

<form method="post" action="/register">
    <h2 class="page-header">Register</h2>
    <div class="form-group">
        <p class="amber-text text-darken-3">Username</p>
        <input type="text" class="form-control" placeholder="How others see you" name="username">
    </div>
    <div class="form-group">
        <p class="amber-text text-darken-3">Email</p>
        <input type="email" class="form-control" placeholder="you@triviamaster.com" name="email">
    </div>
    <div class="form-group">
        <p class="amber-text text-darken-3">Password</p>
        <input type="password" class="form-control" placeholder="T0tal1ySecur3" name="password">
    </div>
    <div class="form-group">
        <p class="amber-text text-darken-3">Confirm Password</p>
        <input type="password" class="form-control" placeholder="T0tal1ySecur3" name="password2">
    </div>
    <div class="center">
        <button type="submit" class="btn btn-default hoverable amber darken-2">Submit</button>
    </div>
</form>
